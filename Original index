        function renderProjects() {
            const cardsGrid = document.getElementById('cardsGrid');
            if (!cardsGrid) {
                console.error('Cards grid not found');
                return;
            }
            
            cardsGrid.innerHTML = '';

            projectsData.forEach((project, index) => {
                const card = document.createElement('div');
                card.className = 'card';
                card.style.animationDelay = `${index * 0.1}s`;

                // Add delete button if authenticated and not a default project
                const deleteBtn = isAuthenticated && !project.id.startsWith('default-')
                    ? `<button class="delete-btn show" onclick="deleteProject('${project.id}')" title="Delete / ‡∏•‡∏ö">√ó</button>`
                    : '';

                const buttonHTML = project.tutorialUrl 
                    ? `<div class="card-buttons">
                        <a href="${project.url}" class="card-link" data-th="‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÄ‡∏•‡πà‡∏ô" data-en="Start Playing">${currentLang === 'th' ? '‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÄ‡∏•‡πà‡∏ô' : 'Start Playing'}</a>
                        <a href="#" class="tutorial-btn" onclick="openCustomTutorial(event, '${project.tutorialUrl}')" data-th="‡∏î‡∏π‡∏ß‡∏¥‡∏ò‡∏µ‡πÄ‡∏•‡πà‡∏ô" data-en="Watch Tutorial">${currentLang === 'th' ? '‡∏î‡∏π‡∏ß‡∏¥‡∏ò‡∏µ‡πÄ‡∏•‡πà‡∏ô' : 'Watch Tutorial'}</a>
                      </div>`
                    : `<a href="${project.url}" class="card-link" data-th="‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÄ‡∏•‡πà‡∏ô" data-en="Start Playing">${currentLang === 'th' ? '‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÄ‡∏•‡πà‡∏ô' : 'Start Playing'}</a>`;

                card.innerHTML = `
                    ${deleteBtn}
                    <div class="card-icon">${project.icon}</div>
                    <h2 class="card-title" data-th="${project.nameTh}" data-en="${project.nameEn}">${currentLang === 'th' ? project.nameTh : project.nameEn}</h2>
                    <p class="card-description" data-th="${project.descTh}" data-en="${project.descEn}">${currentLang === 'th' ? project.descTh : project.descEn}</p>
                    ${buttonHTML}
                `;

                cardsGrid.appendChild(card);
            });

            console.log('Rendered', projectsData.length, 'projects');
        }

        async function deleteProject(projectId) {
            if (!confirm('Are you sure you want to delete this project? / ‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏ô‡πà‡πÉ‡∏à‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà‡∏ß‡πà‡∏≤‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ‡∏ô‡∏µ‡πâ?')) {
                return;
            }

            try {
                const { deleteDoc, doc } = await import("https://www.gstatic.com/firebasejs/12.6.0/firebase-firestore.js");
                
                await deleteDoc(doc(window.db, "projects", projectId));
                
                alert('Project deleted successfully! / ‡∏•‡∏ö‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!');
                loadProjects(); // Reload projects
            } catch (error) {
                console.error("Error deleting project:", error);
                alert('Error deleting project / ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ');
            }
        }

        function openCustomTutorial(event, url) {
            event.preventDefault();
            const iframe = document.querySelector('#tutorialModal iframe');
            iframe.src = url;
            document.getElementById('tutorialModal').classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function selectLanguage(lang) {
            currentLang = lang;
            localStorage.setItem('ltnProjectLang', lang); // Save to localStorage
            document.getElementById('languageModal').classList.add('hidden');
            setLanguage(lang);
            renderProjects(); // Re-render projects with new language
        }

        function setLanguage(lang) {
            currentLang = lang;
            localStorage.setItem('ltnProjectLang', lang); // Save to localStorage
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            const buttons = document.querySelectorAll('.lang-btn');
            if (lang === 'en') {
                buttons[0].classList.add('active');
            } else {
                buttons[1].classList.add('active');
            }

            document.querySelectorAll('[data-th]').forEach(element => {
                if (lang === 'th') {
                    element.textContent = element.getAttribute('data-th');
                } else {
                    element.textContent = element.getAttribute('data-en');
                }
            });

            document.documentElement.lang = lang;
        }

        function openTutorial(event) {
            event.preventDefault();
            document.getElementById('tutorialModal').classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function closeTutorial() {
            document.getElementById('tutorialModal').classList.remove('show');
            document.body.style.overflow = 'auto';
        }

        function closeTutorialOnBackground(event) {
            if (event.target.id === 'tutorialModal') {
                closeTutorial();
            }
        }
    </script>

