    <script>
        let currentLang = localStorage.getItem('ltnProjectLang') || 'en';
        let isAuthenticated = false;
        let projectsData = [];

        // Load default projects immediately on page load
        projectsData = getDefaultProjects();
        
        // Make loadProjects available globally
        window.loadProjects = loadProjects;

        // Render projects as soon as DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', () => {
                renderProjects();
                checkSavedLanguage();
            });
        } else {
            renderProjects();
            checkSavedLanguage();
        }

        function checkSavedLanguage() {
            const savedLang = localStorage.getItem('ltnProjectLang');
            if (savedLang) {
                // User has previously selected a language, skip modal
                document.getElementById('languageModal').classList.add('hidden');
                currentLang = savedLang;
                setLanguage(savedLang);
            }
        }

        function openAddProject() {
            document.getElementById('loginOverlay').classList.add('show');
            document.body.style.overflow = 'hidden';
            document.getElementById('passwordInput').focus();
        }

        function closeLogin() {
            document.getElementById('loginOverlay').classList.remove('show');
            document.body.style.overflow = 'auto';
            document.getElementById('passwordInput').value = '';
        }

        function closeLoginOnBackground(event) {
            if (event.target.id === 'loginOverlay') {
                closeLogin();
            }
        }

        function checkPassword() {
            const password = document.getElementById('passwordInput').value;
            if (password === 'LtnProjAdmin') {
                isAuthenticated = true;
                closeLogin();
                showAddProjectForm();
            } else {
                alert('Wrong password / ‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á');
                document.getElementById('passwordInput').value = '';
                document.getElementById('passwordInput').focus();
            }
        }

        function handleLoginKeyPress(event) {
            if (event.key === 'Enter') {
                checkPassword();
            }
        }

        async function showAddProjectForm() {
            const projectNameEn = prompt('Project Name (English) / ‡∏ä‡∏∑‡πà‡∏≠‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ (‡∏≠‡∏±‡∏á‡∏Å‡∏§‡∏©):');
            if (!projectNameEn) return;

            const projectNameTh = prompt('Project Name (Thai) / ‡∏ä‡∏∑‡πà‡∏≠‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ (‡πÑ‡∏ó‡∏¢):');
            if (!projectNameTh) return;

            const projectUrl = prompt('Project URL / ‡∏•‡∏¥‡∏á‡∏Å‡πå‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ:');
            if (!projectUrl) return;

            const projectIcon = prompt('Project Icon (emoji) / ‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ:');
            if (!projectIcon) return;

            const projectDescEn = prompt('Description (English) / ‡∏Ñ‡∏≥‡∏≠‡∏ò‡∏¥‡∏ö‡∏≤‡∏¢ (‡∏≠‡∏±‡∏á‡∏Å‡∏§‡∏©):');
            if (!projectDescEn) return;

            const projectDescTh = prompt('Description (Thai) / ‡∏Ñ‡∏≥‡∏≠‡∏ò‡∏¥‡∏ö‡∏≤‡∏¢ (‡πÑ‡∏ó‡∏¢):');
            if (!projectDescTh) return;

            const hasVideo = confirm('Does this project have a tutorial video? / ‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ‡∏ô‡∏µ‡πâ‡∏°‡∏µ‡∏ß‡∏¥‡∏î‡∏µ‡πÇ‡∏≠‡∏™‡∏≠‡∏ô‡πÑ‡∏´‡∏°?');
            let tutorialUrl = '';
            
            if (hasVideo) {
                tutorialUrl = prompt('Tutorial Video URL (Streamable embed link) / ‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏ß‡∏¥‡∏î‡∏µ‡πÇ‡∏≠‡∏™‡∏≠‡∏ô:\nExample: https://streamable.com/e/sdqjxt?') || '';
            }

            // Save to Firebase
            try {
                const { addDoc, collection } = await import("https://www.gstatic.com/firebasejs/12.6.0/firebase-firestore.js");
                
                await addDoc(collection(window.db, "projects"), {
                    nameEn: projectNameEn,
                    nameTh: projectNameTh,
                    url: projectUrl,
                    icon: projectIcon,
                    descEn: projectDescEn,
                    descTh: projectDescTh,
                    tutorialUrl: tutorialUrl,
                    createdAt: Date.now()
                });

                alert('Project added successfully! / ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!');
                loadProjects(); // Reload projects
            } catch (error) {
                console.error("Error adding project:", error);
                alert('Error adding project / ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ');
            }
        }

        async function loadProjects() {
            try {
                const { getDocs, collection } = await import("https://www.gstatic.com/firebasejs/12.6.0/firebase-firestore.js");
                
                const querySnapshot = await getDocs(collection(window.db, "projects"));
                const firebaseProjects = [];
                
                querySnapshot.forEach((doc) => {
                    firebaseProjects.push({ id: doc.id, ...doc.data() });
                });

                // Combine default projects with Firebase projects
                if (firebaseProjects.length > 0) {
                    projectsData = [...getDefaultProjects(), ...firebaseProjects];
                } else {
                    projectsData = getDefaultProjects();
                }

                // Sort by createdAt
                projectsData.sort((a, b) => (a.createdAt || 0) - (b.createdAt || 0));

                renderProjects();
            } catch (error) {
                console.error("Error loading projects:", error);
                // Show default projects on error
                projectsData = getDefaultProjects();
                renderProjects();
            }
        }

        function getDefaultProjects() {
            return [
